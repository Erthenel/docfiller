        <Label x:Name="projectNameLabel" Content="Имя проекта:" HorizontalAlignment="Left" Margin="21,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="projectNameTextBox" Text="" HorizontalAlignment="Left" Height="23" Margin="124,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304"/>

        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="124,83,0,0" TextWrapping="Wrap" Text="Укажите шаблон(ы) с закладками через &quot;;&quot; " VerticalAlignment="Top"/>
